    # Logs caught exception and closes the connection.
    def handle_error
      #log "!! Unexpected error while processing request: #{$!.message}"
      #log_error
      e = $!
      $stderr.puts "\nError: #{e.message}\n" + e.backtrace.join("\n")
      close_connection rescue nil
    end
